{% extends "layout-auth.html.twig" %}
{% trans_default_domain "auth" %}

{% block title %}
    {{ "auth.register.title"|trans }} - {{ parent() }}
{% endblock title %}

{% block form_title %}
    {{ "auth.register.form.title"|trans }}
{% endblock form_title %}

{% block form_subtitle %}
    {{ "auth.register.form.subtitle"|trans }}
{% endblock form_subtitle %}

{% block body %}
    <form method="POST">
        <div class="inputs">
            <div class="custom-input-container">
                <div class="custom-input">
                    <i data-feather="user" class="input-icon" width="16px" height="16px" color="#52616b"></i>
                    <input type="text" name="username" placeholder="{{ "auth.register.form.username.placeholder"|trans }}" required />
                </div>
            </div>

            <div class="custom-input-container">
                <div class="custom-input">
                    <i data-feather="mail" class="input-icon" width="16px" height="16px" color="#52616b"></i>
                    <input type="email" name="email" placeholder="{{ "auth.register.form.email.placeholder"|trans }}" required />
                </div>
            </div>

            <div class="custom-input-container">
                <div class="custom-input">
                    <i data-feather="lock" class="input-icon" width="16px" height="16px" color="#52616b"></i>
                    <input type="password" name="password" placeholder="{{ "auth.register.form.password.placeholder"|trans }}" required />
                </div>
            </div>

            <div class="custom-input-container">
                <div class="custom-input">
                    <i data-feather="lock" class="input-icon" width="16px" height="16px" color="#52616b"></i>
                    <input type="password" name="passwordConf" placeholder="{{ "auth.register.form.password_conf.placeholder"|trans }}" required />
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token("register") }}" />
        </div>

        <button class="btn btn-lg btn-primary" type="submit">{{ "auth.register.form.button"|trans }}</button>
    </form>
{% endblock body %}

{% block additional_info %}
    <p>
        {{ "auth.register.additional"|trans }} <a href="{{ url("auth_login") }}">{{ "auth.login.form.button"|trans }}</a>
    </p>
{% endblock additional_info %}
